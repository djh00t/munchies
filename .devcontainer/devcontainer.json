{
  "name": "Munchies Development",
  "dockerComposeFile": ["../docker-compose.yml", "docker-compose.devcontainer.yml"],
  "service": "devcontainer",
  "workspaceFolder": "/workspaces/munchies",
  "shutdownAction": "stopCompose",
  
  // Features to install in the container
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "nodeGypDependencies": true,
      "version": "18"
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true,
      "upgradePackages": true
    }
  },

  // Extensions to install in VS Code
  "customizations": {
    "vscode": {
      "extensions": [
        // Language support
        "ms-vscode.vscode-typescript-next",
        "bradlc.vscode-tailwindcss",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        
        // Development tools
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "ms-vscode.vscode-eslint",
        "formulahendry.auto-rename-tag",
        "christian-kohler.path-intellisense",
        "ms-vscode.vscode-typescript-next",
        
        // Database
        "ms-ossdata.vscode-postgresql",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg",
        
        // Docker
        "ms-azuretools.vscode-docker",
        
        // Git
        "eamodio.gitlens",
        "mhutchie.git-graph",
        
        // Testing
        "ms-vscode.test-adapter-converter",
        "hbenl.vscode-test-explorer",
        
        // Productivity
        "ms-vscode.vscode-todo-highlight",
        "gruntfuggly.todo-tree",
        "aaron-bond.better-comments",
        "pkief.material-icon-theme",
        "github.copilot",
        "github.copilot-chat",
        
        // React/Next.js specific
        "ms-vscode.vscode-react-javascript-snippets",
        "burkeholland.simple-react-snippets",
        "ms-vscode.vscode-js-debug"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "typescript.updateImportsOnFileMove.enabled": "always",
        "emmet.includeLanguages": {
          "typescript": "html",
          "typescriptreact": "html"
        },
        "files.exclude": {
          "**/node_modules": true,
          "**/dist": true,
          "**/.next": true
        },
        "search.exclude": {
          "**/node_modules": true,
          "**/dist": true,
          "**/.next": true
        }
      }
    }
  },

  // Port forwarding
  "forwardPorts": [3000, 3001, 5432, 6379],
  "portsAttributes": {
    "3000": {
      "label": "Next.js Frontend",
      "onAutoForward": "notify"
    },
    "3001": {
      "label": "Express Backend API",
      "onAutoForward": "notify"
    },
    "5432": {
      "label": "PostgreSQL Database",
      "onAutoForward": "silent"
    },
    "6379": {
      "label": "Redis Cache",
      "onAutoForward": "silent"
    }
  },

  // Commands to run after container creation
  "postCreateCommand": "npm install && npm run db:migrate && npm run db:seed",
  
  // Commands to run when starting the container
  "postStartCommand": "echo 'üçï Munchies dev environment is ready! Run npm run dev to start the application.'",

  // Mount the Docker socket for Docker-in-Docker
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],

  // User configuration
  "remoteUser": "node",
  "containerUser": "node",

  // Environment variables
  "containerEnv": {
    "NODE_ENV": "development",
    "DATABASE_URL": "postgresql://munchies:munchies123@postgres:5432/munchies",
    "REDIS_URL": "redis://redis:6379"
  }
}
