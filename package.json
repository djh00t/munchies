{
  "name": "munchies",
  "version": "1.0.0",
  "description": "Comprehensive meal planning and inventory management application",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:web\"",
    "dev:backend": "npm run dev --workspace=packages/backend",
    "dev:web": "npm run dev --workspace=packages/web",
    "dev:mobile": "npm run dev --workspace=packages/mobile",
    "dev:admin": "npm run dev --workspace=packages/admin",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "clean": "rm -rf packages/*/dist packages/*/build packages/*/.next packages/*/node_modules node_modules",
    "db:migrate": "npm run db:migrate --workspace=packages/backend",
    "db:seed": "npm run db:seed --workspace=packages/backend",
    "docker:up": "echo 'Docker not available in dev container. Use npm run services:start instead.'",
    "docker:down": "echo 'Docker not available in dev container. Use npm run services:stop instead.'",
    "docker:reset": "echo 'Docker not available in dev container. Use npm run services:stop && npm run services:start instead.'",
    "services:start": "./scripts/start-services.sh",
    "services:stop": "./scripts/stop-services.sh",
    "services:status": "./scripts/health-check.sh",
    "setup:dev": "./scripts/setup-dev.sh",
    "health:check": "./scripts/health-check.sh",
    "logs": "docker-compose logs -f",
    "logs:backend": "docker-compose logs -f backend",
    "logs:db": "docker-compose logs -f postgres",
    "logs:redis": "docker-compose logs -f redis"
  },
  "devDependencies": {
    "concurrently": "9.2.0",
    "@types/node": "24.1.0",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/djh00t/munchies.git"
  },
  "author": "David Hooton <djh00t@gmail.com>",
  "license": "MIT"
}