# Environment Configuration (Dev Container)
NODE_ENV=development

# Database Configuration (Local PostgreSQL)
DATABASE_URL=postgresql://munchies:munchies123@localhost:5432/munchies_dev
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
APPLE_CLIENT_ID=your-apple-client-id
APPLE_PRIVATE_KEY=your-apple-private-key
APPLE_KEY_ID=your-apple-key-id
APPLE_TEAM_ID=your-apple-team-id

# API Keys
SPOONACULAR_API_KEY=your-spoonacular-api-key
GITHUB_AI_API_KEY=your-github-ai-api-key

# Storage Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Payment Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# OCR Configuration
TESSERACT_CMD=tesseract
GOOGLE_CLOUD_VISION_KEY=your-google-cloud-vision-key

# Monitoring
LOG_LEVEL=debug
ENABLE_LOGGING=true

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3002

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
